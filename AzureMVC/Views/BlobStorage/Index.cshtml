
@{
    ViewData["Title"] = "Index";
}
<h2>Save Picture</h2>
<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="picture" />
    <button class="btn btn-primary mr-5" type="submit">Save</button>

</form>


<h2>Pictures</h2>
<table class="table table-bordered mb-5">
    <tr>
        <th>Picture</th>
        <th>Names</th>
        <th>Action</th>
    </tr>

    @foreach (var item in ViewBag.blobs as List<AzureTableStorageMVC.Models.BlobFile>)
    {
        <tr>
            <td>
                <img src="@item.Url" class="img-thumbnail" style="width:100px;" />
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <a class="btn btn-dark" asp-action="Download" asp-route-fileName="@item.Name">Download</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-fileName="@item.Name">Delete</a>
            </td>
        </tr>
    }

</table>

<h2>Logs</h2>
<table class="table table-bordered mt-3">
    <tr>
        <th>Expression</th>
    </tr>

    @foreach (var item in ViewBag.logs as List<string>)
    {
        <tr>
            <td>
                @item
                <br />
            </td>
        </tr>
    }

</table>

